extends layout

block content
  h1= title
  p Use this to add a form
  hr
  if msg 
    p(class='redtext')= msg
  form(method='POST', action='/contacts/add')
    label First Name:
      |
      input(type='text' name='firstName')
    br
    label Last Name: 
      |
      input(type='text' name='lastName') 
    br
    label Email Address: 
      |
      input(type='text' name='email') 
    br
    |
    button(type='submit') Create Todo
    | 
    a(href='/contacts') Cancel