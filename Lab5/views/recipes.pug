extends layout

block content
  h1= title
  p Welcome to #{title}
  .edit-actions
    a(href='/recipes/add') Add a Recipe
  hr
  if recipes.length > 0
    #recipes-wrapper 
      ul.recipes-list 
        each val in recipes 
          a(href=`/recipes/${val.id}`)
            li(data-recipesid=val.id)
              p= 'First Name: ' + val.dishName
              p= 'Last Name: ' + val.occasion 
              p= 'Email Address: ' + val.instruction