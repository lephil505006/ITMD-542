extends layout

block content
  h1= title
  p Use this to edit this form
  hr
  if msg 
    p(class='redtext')= msg
  form(method='POST', action=`/recipes/${recipe.id}/edit`)
    label Dish Name: 
      |
      input(type='text', name='recipeDish', class="textbox", value=recipe.dishName) 
    br
    label The Occasion: 
      |
      input(type='text', name='recipeOccasion', class="textbox", value=recipe.occasion) 
    br
    label Servings: 
      |
      input(type='text', name='recipeServing', class="textbox", value=recipe.serving) 
    br
    label Description: 
      |
      input(type='text', name='recipeDescription', class="textbox", value=recipe.description) 
    br
    label Instruction and Ingredients: 
      |
      input(type='text', name='recipeInstruction', class="textbox", value=recipe.instruction) 
    br
    button(type='submit' class="submit") Save Changes
    | 
    a(href='/recipes') Cancel